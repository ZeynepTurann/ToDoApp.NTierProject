@model ToDoCreateDto



<div class="card mx-auto" style="width: 50rem;">
	<h5 class="card-header text-center text-white bg-secondary">CREATE A NEW TO DO</h5>
  <div class="card-body">
	  <form asp-action="Create" asp-controller="Home" method="post">
	 <div class="mb-3">
		<label>Please Enter Your Title: </label>
		<input asp-for="@Model.Definition" type="text" class="form-control"  />
	  </div>
	  <div> 
		<label>Please Choose Title's Priority:</label>
		<select asp-items="@ViewBag.Priorty" asp-for="@Model.Priority" class="form-control"></select>
	    </div>
		
	<div class="form-check my-3">
        <input class="form-check-input" type="checkbox" asp-for="@Model.IsStarted" id="defaultCheck1">
        <label class="form-check-label" for="IsStarted">
         Is Started?
        </label>
    </div>
   <h5 class="my-2 bg-secondary text-white text-center p-2">Set Your Time! </h5>
  
	<div class="mt-3">
		<div>
		<label class="d-block">Start Time: </label>
					<input class="w-50" asp-for="@Model.StartDate" type="datetime-local" >
		 </div>
		<div class="mt-2">
		<label class="d-block">Expected DeadLine: </label>
		<input class="w-50" asp-for="@Model.Deadline" class="datepicker" data-date-format="mm/dd/yyyy">
    	</div>
		</div>
	
	   <div class="mt-3">
	     <button type="submit" class="btn btn-secondary btn-block">Save</button>
       </div>
	   </form>

</div>
</div>

	

  



















