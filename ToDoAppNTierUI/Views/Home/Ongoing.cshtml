<div class="text-center my-3">
   <h3>ONGOING TITLES LIST</h3>
</div>

<table class="table table-hover table-bordered table-sm">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Is Started</th>
            <th>Priority</th>
            <th>Created Date</th>
            <th>Started Date</th>
            <th>DeadLine </th>
            <th>
                Processes
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Definition</td>
                <td>Started</td>
                <td>@item.Priority</td>
                <td>@item.CreateDate</td>
                 <td>@item.StartDate</td>
                <td>@item.Deadline</td>
                <td>
                    <a asp-action="Update" asp-controller="Home" class="btn btn-info btn-sm" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Home" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>

